<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:id="@+id/item_rl_onclick"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220px"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@drawable/item_selector"
    android:padding="5px"
    android:layout_height="50px">



    <RelativeLayout

        android:id="@+id/RL_0"
        android:layout_width="35px"
        android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/item_rl_0"
            android:layout_width="30px"
            android:layout_height="30px"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/hendcolor1">

            <TextView
                android:id="@+id/item_textview_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="B"
                android:textColor="#FFF"
                android:textSize="15px" />



        </RelativeLayout>

        <TextView

            android:id="@+id/phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/item_corner"
            android:layout_width="15px"
            android:layout_height="15px"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/soild_shape"
            android:gravity="center"
            android:layout_marginTop="1px"
            android:textColor="#fff"
            android:text="7"
            android:textSize="10px"

            />

    </RelativeLayout>





    <LinearLayout
        android:layout_width="170px"
        android:layout_height="60px"

        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/item_textview"
            android:layout_width="wrap_content"
            android:layout_height="25px"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:text="Bill"
            android:textSize="20px"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:layout_marginTop="1px"
            >


            <TextView
                android:id="@+id/textview_date"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-10-1"
                android:textSize="13px"
                android:textColor="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/textview_time"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:22"
                android:textColor="@android:color/darker_gray"
                android:textSize="13px"
                />




        </RelativeLayout>
        
        
        
    </LinearLayout>






</RelativeLayout>
