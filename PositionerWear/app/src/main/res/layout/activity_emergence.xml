<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240px"
    android:layout_height="240px"
    android:background="#000"
    tools:context="com.wite.positionerwear.IceInfoActivity">
    <RelativeLayout
        android:layout_width="230px"
        android:layout_height="230px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/RL_0"
            android:layout_width="200px"
            android:layout_height="40px"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10px"
                android:text="Ice"
                android:textColor="#ff00cef8"
                android:textSize="20px" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="2px"
                android:text="02:10"
                android:textColor="@android:color/darker_gray"
                android:textSize="20px"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:layout_below="@+id/RL_0"
            android:layout_centerHorizontal="true"
            >





            <RelativeLayout
                android:id="@+id/RL_2"
                android:layout_width="200px"
                android:layout_height="60px"
                >


                <RelativeLayout
                    android:id="@+id/RL_1"
                    android:layout_width="200px"
                    android:layout_height="35px"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/item_bg">

                    <TextView
                        android:id="@+id/textviewtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                        android:paddingRight="5px"
                        android:text="contact"
                        android:textColor="#FFF"
                        android:textSize="20px" />




                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/item_rl_0"
                    android:layout_width="45px"
                    android:layout_height="45px"
                    android:layout_centerVertical="true"
                    android:layout_margin="10px"

                    android:layout_marginLeft="25px"
                    android:background="@drawable/icon_1"
                    android:gravity="center">

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RL_3"
                android:layout_width="230px"
                android:layout_height="110px"
                android:layout_marginTop="5px"
                android:background="@drawable/item_bg"
                android:layout_below="@id/RL_2"
                >
                <TextView
                    android:id="@+id/textmessage"
                    android:layout_width="230px"
                    android:layout_height="110px"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:padding="5px"
                    android:ellipsize="end"
                    android:textColor="#FFF"
                    android:textSize="20px"
                    android:gravity="left"
                    android:scrollbars="vertical"
                    android:maxLines="12"
                    android:maxWidth="150px"
                   android:text="Nameï¼šCaesar Contact number:1877499454"

                    />


            </RelativeLayout>
        </RelativeLayout>









    </RelativeLayout>


</RelativeLayout>
