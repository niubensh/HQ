<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240px"
    android:layout_height="240px"
    android:background="#000">


    <!--icvp_scroll_duration  切换速度-->
    <!--  app:icvp_max_page_scale="0.8"最大比例
            app:icvp_min_page_scale="0.45"
            最小比例 初始值0.55
            -->

    <com.wite.positionerwear.infinitecycleviewpager.HorizontalInfiniteCycleViewPager
        android:id="@+id/hicvp"
        android:layout_width="match_parent"
        android:layout_height="210px"
        android:layout_marginTop="30px"
        app:icvp_center_page_scale_offset="30px"
        app:icvp_interpolator="@android:anim/accelerate_decelerate_interpolator"
        app:icvp_max_page_scale="0.9"
        app:icvp_medium_scaled="false"
        app:icvp_min_page_scale="0.5"
        app:icvp_min_page_scale_offset="5px"
        app:icvp_scroll_duration="300" />


    <ImageView
        android:id="@+id/imageView_touyin"
        android:layout_width="80px"
        android:layout_height="20px"
        android:layout_below="@+id/hicvp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50px"
        android:background="@drawable/phonebook1" />

    <LinearLayout
        android:layout_width="60px"
        android:layout_height="20px"
        android:layout_below="@+id/hicvp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_0"
            android:layout_width="6px"
            android:layout_height="6px"
            android:layout_weight="1"
            android:src="@drawable/yes" />

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="6px"
            android:layout_height="6px"
            android:layout_weight="1"
            android:src="@drawable/no" />

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="6px"
            android:layout_height="6px"
            android:layout_weight="1"
            android:src="@drawable/no" />

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="6px"
            android:layout_height="6px"
            android:layout_weight="1"
            android:src="@drawable/no" />

        <ImageView
            android:id="@+id/iv_4"
            android:layout_width="6px"
            android:layout_height="6px"
            android:layout_weight="1"
            android:src="@drawable/no" />
     <!--&lt;!&ndash;      &lt;!&ndash;测试来玩的&ndash;&gt;-->
    <ImageView
            android:id="@+id/iv_5"
            android:layout_width="6px"
            android:layout_height="6px"
            android:layout_weight="1"
            android:src="@drawable/no"/>

    </LinearLayout>


</RelativeLayout>